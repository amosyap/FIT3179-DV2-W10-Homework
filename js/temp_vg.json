{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": {
    "text": "Malaysia: Vehicle Registration vs Environmental Complaints by State (2019)",
    "anchor": "start",
    "fontSize": 16,
    "offset": 10
  },
  "background": "#ffffff",
  "projection": {
    "type": "mercator",
    "center": [102, 4],
    "scale": 1200,
    "translate": [400, 300]
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/amosyap/FIT3179-DV2/main/FIT3179%20-%20W9_Homework/js/ne_10m.topojson",
        "format": {"type": "topojson", "feature": "ne_10m_admin_0_countries"}
      },
      "transform": [
        {"filter": "datum.NAME == 'Malaysia'"}
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#f0f0f0",
        "stroke": "white",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "data/DV2_Dataset.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {"filter": "datum.state !== 'Malaysia'"}
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.8,
        "stroke": "white",
        "strokeWidth": 1.5,
        "tooltip": {"content": "data"}
      },
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative",
          "title": "Longitude"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative",
          "title": "Latitude"
        },
        "size": {
          "field": "registered_motor_cars",
          "type": "quantitative",
          "title": "Registered Motor Cars",
          "scale": {
            "type": "sqrt",
            "range": [100, 2500],
            "domain": [100000, 6500000]
          },
          "legend": {
            "title": "Registered Vehicles",
            "direction": "horizontal",
            "orient": "bottom",
            "gradientLength": 200,
            "labelOverlap": true
          }
        },
        "color": {
          "field": "number_of_complaints",
          "type": "quantitative",
          "title": "Environmental Complaints",
          "scale": {
            "scheme": "reds",
            "domain": [0, 3500]
          },
          "legend": {
            "title": "Number of Complaints",
            "direction": "horizontal",
            "orient": "bottom",
            "gradientLength": 200
          }
        },
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {"field": "registered_motor_cars", "type": "quantitative", "title": "Registered Vehicles", "format": ","},
          {"field": "number_of_complaints", "type": "quantitative", "title": "Environmental Complaints"},
          {"field": "state_population", "type": "quantitative", "title": "Population", "format": ","},
          {"field": "complaints_per_10k_residents", "type": "quantitative", "title": "Complaints per 10k", "format": ".1f"},
          {"field": "vehicles_per_1k_residents", "type": "quantitative", "title": "Vehicles per 1k", "format": ".1f"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/amosyap/FIT3179-DV2/main/FIT3179%20-%20W9_Homework/data/DV2_Dataset.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {"filter": "datum.state !== 'Malaysia'"}
      ],
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "dx": 0,
        "dy": 0,
        "fontSize": 9,
        "fontWeight": "bold",
        "fill": "white",
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "state", "type": "nominal"}
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"},
    "legend": {
      "labelColor": "#333333",
      "titleColor": "#333333",
      "titleFontSize": 12,
      "labelFontSize": 10
    },
    "title": {"color": "#333333", "fontSize": 14}
  }
}